generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDING //En attente d'un livreur
  ON_DELIVERY // En cours de livraison
  DELIVERED // Livr√©
}

model orders {
  id String @id @default(uuid())
  products Json
  total_amount String
  address String
  user_id String
  created_at DateTime @default(now())
}
